  {
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./",
    "target": "ES2017",
    "lib": ["es7"],
    "declaration": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "Node",
    "noImplicitAny": false,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "allowJs": false,
    "resolveJsonModule": true,
    "noUnusedLocals": false,
    "removeComments": true
},
  "include": [
    "server/**/*",
    "index.ts"
]
}
